<Page xmlns="http://www.nativescript.org/tns.xsd"
      loaded="loaded"
      navigatedTo="navigatedTo">

    <ListView items="{{ sessions }}">
    <ListView.itemTemplate>

        <GridLayout columns="auto,*" rows="*" >
          <!--Image col="0" src="{{ $value | urlConverter(Speakers) }}"/-->
          <Image col="0" src="https://www.thatconference.com/cloud/profilephotos/That-Conference-b09e7430-5905-418e-b775-fb08f8e814c8-635675752178054934.png?width=50"/>

          <StackLayout col="1">
            <Label text="{{ Title }}" textWrap="true" cssClass="sessionTitle"/>
            <Label text="{{ Speakers[0].FirstName + ' ' + Speakers[0].LastName }}" />
          </StackLayout>

        </GridLayout>

    </ListView.itemTemplate>
  </ListView>

</Page>
